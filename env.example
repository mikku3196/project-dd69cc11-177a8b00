# 環境変数設定ファイル
# このファイルをコピーして .env として使用してください

# Bybit API設定
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_SECRET_KEY=your_bybit_secret_key_here
BYBIT_TESTNET=true  # 本番環境では false に変更

# Google Gemini API設定（複数のAPIキーを設定可能）
GEMINI_API_KEYS=key1,key2,key3  # カンマ区切りで複数設定

# Discord通知設定
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# データベース設定
DATABASE_URL=sqlite:///./trading_bot.db  # SQLiteの場合
# DATABASE_URL=postgresql://user:password@localhost/dbname  # PostgreSQLの場合

# システム設定
LOG_LEVEL=INFO
ENVIRONMENT=development  # development, testing, production

# 取引設定
DEFAULT_ACCOUNT_BALANCE=1000  # USDT
MAX_POSITION_SIZE=0.1  # 総資産に対する最大ポジションサイズ
RISK_PER_TRADE=0.02  # 1取引あたりの最大リスク

# ニュース設定
NEWS_FETCH_INTERVAL=900  # 秒（15分）
SENTIMENT_ANALYSIS_ENABLED=true

# 監視設定
HEALTH_CHECK_INTERVAL=300  # 秒（5分）
PERFORMANCE_REPORT_INTERVAL=3600  # 秒（1時間）

# 最適化設定
BACKTEST_PERIOD_DAYS=180  # バックテスト期間（日）
PARAMETER_OPTIMIZATION_ENABLED=true
OPTIMIZATION_SCHEDULE=monthly  # daily, weekly, monthly
